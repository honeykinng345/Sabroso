<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relavtive1"
        android:background="@drawable/tool_bar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"

            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="Alert..!"

            style="@style/TextAppearance.AppCompat.Title"

            android:layout_centerHorizontal="true">

        </TextView>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:id="@+id/backBtn"
            android:src="@drawable/ic_baseline_chevron_left_24">

        </ImageButton>

    </RelativeLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_marginTop="10dp"


        app:lottie_rawRes="@raw/cancel"
        android:id="@+id/checkAnimation"
        app:lottie_autoPlay="true"

        app:lottie_loop="true"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relavtive1"
        android:layout_height="210dp">

    </com.airbnb.lottie.LottieAnimationView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
android:visibility="gone"

        app:lottie_rawRes="@raw/cheat"
        android:id="@+id/cheat"
        app:lottie_autoPlay="true"

        app:lottie_loop="true"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relavtive1"
        android:layout_height="210dp">

    </com.airbnb.lottie.LottieAnimationView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
     android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/t"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorprimary"
        android:textSize="17dp"
        android:text="This customer is not belongs to you"

        android:layout_below="@+id/checkAnimation">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/thanksTv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorprimary"
        android:textSize="17dp"
        android:text="This customer is not belongs to you"

        android:layout_below="@+id/cheat">

    </TextView>

</RelativeLayout>